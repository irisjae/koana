<input ref="input" type={ args .type } placeholder={ args .placeholder } maxlength={ args .maxlength } >

<script>
    var input = ref ('input')
    
    input .thru (tap, function (ref) {
        if (args .change__to)
            ref .addEventListener ('change', function () {
                args .change__to (ref .value)
            })
        if (args .input__to)
            ref .addEventListener ('input', function () {
                args .input__to (ref .value)
            })
    })
</script>