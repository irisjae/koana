<style>

@at-root {
    @font-face {
        font-family: 'Checkbox';
        src: url(data:application/x-font-ttf;charset=utf-8;base64,) format('truetype');
    }
}
    cursor: pointer;
    user-select: none;
    position: relative;
    display: block;
    width: 17px;
    height: 17px;
    margin: 5px auto;
    
    color: rgba(0,0,0,.87);
    transition: color .1s ease;
    
    &:before {
        border-color: rgba(34,36,38,.35);  
        position: absolute;
        top: 0;
        left: 0;
        width: 17px;
        height: 17px;
        content: '';
        background: rgba(255,255,255,0.5);
        border-radius: .21428571rem;
        transition: border .1s ease,opacity .1s ease,transform .1s ease,box-shadow .1s ease;
        border: 1px solid #D4D4D5;
    }
    
    &:focus:before {
        border: 1px solid rgba(0,0,0,.95);
    }
    &:after {
        content: '\e800';
        opacity: 0;
        position: absolute;
        font-size: 14px;
        top: 0;
        left: 0;
        margin-top: -1px;
        width: 17px;
        height: 17px;
        text-align: center;
        color: rgba(0,0,0,.87);
        transition: border .1s ease,opacity .1s ease,transform .1s ease,box-shadow .1s ease;
        font-family: Checkbox;
    }
    &[checked]:after {
        opacity: 1;
    }
</style>

<script>
    self .root .addEventListener ('click', function () {
        if (self .root .getAttribute ('checked')) {
            self .root .removeAttribute ('checked');
            self .mention (args .check__to, false)
        }
        else {
            self .root .setAttribute ('checked', true);
            self .mention (args .check__to, true)
        }
    });
</script>