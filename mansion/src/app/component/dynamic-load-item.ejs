<yield />

<script>
	var nth = (+ args .nth);
	self .remembers (':nth', nth);
	self .remembers (':item', my (args .item__from));
	    
	self .on ('updated', function () {
		var nth = (+ args .nth);
		if (nth < my ('loaded-items') .length) {
			self .mention (':nth', nth);  
			self .mention (':item', my (args .item__from));
		}
	})
</script>