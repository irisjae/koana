<soon-highlight if={ my ('soon') () }>
	{ Math .floor (my ('how-soon') ()) === 2 && '後天' }
	{ Math .floor (my ('how-soon') ()) === 1 && '明天' }
	{ Math .floor (my ('how-soon') ()) === 0 && '今天' }
</soon-highlight>
<month-highlight if={ ! my ('soon') () }>
	{ my ('month') () }
</month-highlight>
<day-highlight if={ ! my ('soon') () }>
	{ my ('day') () }
</day-highlight>
<day-of-week-highlight>
	{ my ('day-of-week') () }
</day-of-week-highlight>
<time-highlight>
	{ my ('time') () }
</time-highlight>

<style>
	display: unset;
	position: unset;
	width: unset;
    font-size: 1.3em;
	
	> * {
		display: block;
		width: 100%;
	}

	soon-highlight {
    	text-align: center;
	    position: absolute;
	    top: 3%;
	    font-weight: bolder;
	    font-size: 1.1em;
    }
	month-highlight {
		text-align: left;
	    position: absolute;
	    top: 2%;
	    left: 4px;
	    font-size: 0.8em;
    }
	day-highlight {
	    text-align: right;
	    position: absolute;
	    top: 2%;
	    right: 4px;
	    font-size: 0.8em;
    }
	day-of-week-highlight {
		text-align: center;
	    position: absolute;
	    top: 35%;
	    font-weight: bold;
    }
	time-highlight {
	    text-align: center;
	    position: absolute;
	    top: 48%;
	    transform: translateY(10px);
	    font-size: 0.76em;
    }
</style>

<script>
    self
		.remembers ('time', function () {
			var date_time = new Date (my (args .timeslot__from));
			return (function (am_pm) {
				if (am_pm === 'AM') return '上午'
				if (am_pm === 'PM') return '下午'
			}) (fecha .format (date_time, 'A')) + ' ' + fecha .format (date_time, 'h:mm');
		})
        .remembers ('month', function () {
            //2016年7月7日
            return fecha .format (new Date (my (args .timeslot__from)), 'M月');
        })
        .remembers ('day', function () {
            //2016年7月7日
            return fecha .format (new Date (my (args .timeslot__from)), 'D');
        })
        .remembers ('day-of-week', function () {
            //週日
            return '週' + day_of_week_to_chi (new Date (my (args .timeslot__from)));
        })
        .remembers ('how-soon', function () {
			return day_difference (fecha .format (new Date (), 'YYYY-MM-DD'), fecha .format (my (args .timeslot__from), 'YYYY-MM-DD'));
        })
        .remembers ('soon', function () {
			return my ('how-soon') < 3;
        })
        
    self .impressions (args .timeslot__from) .thru (tap, self .render)
</script>